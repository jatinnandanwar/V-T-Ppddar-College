<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/navigation_home"
    android:id="@+id/mobile_navigation">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.college_app.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home"/>

    <fragment
        android:id="@+id/navigation_notice"
        android:name="com.example.college_app.ui.notice.NoticeFragment"
        android:label="Notice"
        tools:layout="@layout/fragment_notice"/>

    <fragment
        android:id="@+id/navigation_faculty"
        android:name="com.example.college_app.ui.faculty.FacultyFragment"
        android:label="Faculty"
        tools:layout="@layout/fragment_faculty"/>

    <fragment
        android:id="@+id/navigation_course"
        android:name="com.example.college_app.ui.course.CourseFragment"
        android:label="Course"
        tools:layout="@layout/fragment_course"/>

    <fragment
        android:id="@+id/navigation_about"
        android:name="com.example.college_app.ui.about.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about"/>

